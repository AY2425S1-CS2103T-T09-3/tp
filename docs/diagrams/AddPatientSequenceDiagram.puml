@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant "a:AddPatientCommand" as AddPatientCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box
[-> LogicManager : execute(add-patient)
activate LogicManager

LogicManager -> AddressBookParser : parseCommand(add-patient)
activate AddressBookParser

create AddPatientCommand
AddressBookParser -> AddPatientCommand
activate AddPatientCommand

AddPatientCommand --> AddressBookParser
deactivate AddPatientCommand

AddressBookParser --> LogicManager : a
deactivate AddressBookParser

LogicManager -> AddPatientCommand : execute()
activate AddPatientCommand

AddPatientCommand -> Model : addPatient(patientToAdd)
activate Model

Model --> AddPatientCommand
deactivate Model

AddPatientCommand --> LogicManager : result
deactivate AddPatientCommand
AddPatientCommand -[hidden]-> LogicManager : result
destroy AddPatientCommand

[<--LogicManager
deactivate LogicManager
@enduml
